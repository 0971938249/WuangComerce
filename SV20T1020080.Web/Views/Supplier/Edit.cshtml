@model SV20T1020080.DomainModels.Supplier
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form class="" action="~/Supplier/Save" method="post">
            <input type="hidden" name="SupplierID" value="@Model.SupplierID" />
            <div class="form-group">
                <label for="">Tên nhà cung cấp:</label>
                <input type="text" class="form-control" name="SupplierName" autofocus value="@Model.SupplierName">
                @Html.ValidationMessage("SupplierName",new {@style="color:#f00"})
            </div>
            <div class="form-group">
                <label for="">Tên giao dịch:</label>
                <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                @Html.ValidationMessage("ContactName",new {@style="color:#f00"})
            </div>
            <div class="form-group">
                <label for="">Điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
            </div>
            <div class="form-group">
                <label for="">Email:</label>
                <input type="email" class="form-control" name="Email" value="@Model.Email">
                @Html.ValidationMessage("Email",new {@style="color:#f00"})
            </div>
            <div class="form-group">
                <label for="">Địa chỉ:</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
            </div>
            <div class="form-group">
                <label for="">Tỉnh thành:</label>
               @* <select class="form-control" name="Provice">
                    <option>--Chọn tỉnh thành--</option>
                    @foreach (var item in SV20T1020080.BusinessLayers.CommonDataService.ListofProvince())
                    {
                        if (item.ProvinceName == Model.Provice)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select>*@
                @Html.DropDownListFor(m=>m.Provice,SelectListHelper.Suppliers(),new{@class="form-control select2"})
                @Html.ValidationMessage("Provice",new {@style="color:#f00"})
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">Quay lại</a>
            </div>

        </form>
    </div>
</div>