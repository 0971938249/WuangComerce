
@{
}
<div class="box box-primary">

    <div class="box-header with-border ">
        <h3 class="box-title">Đổi mật khẩu</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body">
         <form class="form-horizontal" action="~/Account/SaveAccount" method="post" >
            <div class="form-group">
                <label class="control-label col-sm-2">Nhập mật khẩu:</label>
                <div class="col-sm-10">
                <input type="password" class="form-control" autofocus name="password" value="" required>
                @Html.ValidationMessage("password", new { @style = "color:#f00" })
                </div>
            </div>
            <div class="form-group" style="margin-top:10px">
                <label class="control-label col-sm-2">Nhập mật khẩu mới:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" rows="3" name="newpassword" required/>
                @Html.ValidationMessage("newpassword", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Xác nhập mật khẩu:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" rows="3" name="acceptpassword" required/>
                @Html.ValidationMessage("acceptpassword", new { @style = "color:#f00" })
                </div>
            </div>
            <div class="flex justify-content-center ">
                @Html.ValidationMessage("ktmk", new { @style = "color:#f00" })
                @Html.ValidationMessage("ktmk1", new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Home">
                        Quay lại
                    </a>
                </div>
            </div>
        
            </form>
    </div>

</div>
