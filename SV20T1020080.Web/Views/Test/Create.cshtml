@model SV20T1020080.Web.Models.Person
@{
    ViewBag.Title = "Create Person";
}
<div class="box box-primary">
    <div class="box-body">
        <form class="" action="~/Test/Save" method="post">
            
            <div class="form-group">
                <label for="">Tên :</label>
                <input type="text" class="form-control" name="name" autofocus value="@Model.name">
            </div>
            <div class="form-group">
                <label for="">BirthDate:</label>
                <input type="hidden" name="BirthDate" value="@Model.BirthDate"/>
                <input type="text" class="form-control" name="Birthday"  value="@Model.BirthDate.ToString("dd/MM/yyyy",new System.Globalization.CultureInfo("en-GB"))">
            </div>
            <div class="form-group">
                <label for="">Salary:</label>
                <input type="text" class="form-control" name="Salary" value="@Model.Salary">
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>